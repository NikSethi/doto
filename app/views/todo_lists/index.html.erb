<h1 >Todo Lists</h1>




    <% @todo_lists.each do |todo_list| %>
      <div id="<%= dom_id(todo_list) %>">
       <strong><%= link_to todo_list.title, todo_list_todo_items_path(todo_list) %></strong>
       <p><%= todo_list.description %></p>
        <div id="controls">
          <%= link_to 'Show', todo_list %>
          <%= link_to 'Edit', edit_todo_list_path(todo_list) %>
          <%= link_to 'Delete', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        </div>
     <br>
    <% end %>
